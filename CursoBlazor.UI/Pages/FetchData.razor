@page "/fetchdata"
@using CursoBlazor.Models
@using Interfaces
@inject ICategoriaService CategoriaService

<PageTitle>Categorias</PageTitle>
<h1>Categorias</h1>

<a class="btn btn-success btn-sm" href="/counter/" type="button">Agregar categoria</a>

<p>@Message</p>

@if(categorias != null){

    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nombre</th>
                <th scope="col">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in categorias)
            {
                <tr>
                    <th scope="row">@item.Id</th>
                    <td>@item.Name</td>
                    <td><a class="btn btn-info btn-sm" href="/counter/@item.Id" role="button">Editar</a></td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p><em>Cargando</em></p>
}

@code {
    private IEnumerable<Categoria> categorias { get; set; }
    private string Message { get; set; }

    protected async override Task OnInitializedAsync()
    {
        try
        {
            categorias = await CategoriaService.GetCategorias();
        }
        catch (Exception e)
        {
            Message = e.Message;
        }
    }
}